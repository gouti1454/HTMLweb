@page
@using GoutiClothing.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row login-card">
    <div class="col-12 login-form">
        <form id="registerForm" class="form-layout" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create Account.</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!---->
            <div class="form-floating my-2">
                <input asp-for="Input.FirstName" class="form-control"  aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <!---->
            <div class="form-floating my-2">
                <input asp-for="Input.SecondName" class="form-control"  aria-required="true" />
                <label asp-for="Input.SecondName"></label>
                <span asp-validation-for="Input.SecondName" class="text-danger"></span>
            </div>
             <!---->

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <!-- -->
            <!-- un commnet when want to create Admin User Registeration-->
            <div class="form-floating my-2">
                <input type="radio" name="rdUserRole"   value="@StaticDetails.ManagerRole" /> Select only to create @StaticDetails.ManagerRole Role
                
                
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
